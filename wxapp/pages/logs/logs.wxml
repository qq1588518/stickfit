<!--logs.wxml-->
<view class="page my-page">
  <view class="weui-cells__title">{{customer.username}}本月运动记录</view>
  <view class="weui-cells weui-cells_after-title my-cells">

    <checkbox-group bindchange="checkboxChange">
      <label class="weui-cell weui-check__label" wx:for="{{records}}" wx:key="value">
        <checkbox class="weui-check" value="{{item.id}}" checked="{{item.checked}}" />

        <view class="weui-cell__bd">{{index + 1}}. {{item.msg}}</view>
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
        </view>
      </label>
    </checkbox-group>
  </view>
  <view class="weui-cells__tips">{{summary}}</view>

  <view class="weui-btn-area page__ft">
    <button class="weui-btn" type="warn" bindtap='clearSelected'>删除选中</button>
  </view>
</view>