<!--pages/rank/rank.wxml-->
<view class="container log-list">
  <view class="weui-cells__title">{{yearMonth.display}}排行榜</view>
  <view class="weui-cells weui-cells_after-title">

    <navigator url="../detail/detail?customerId={{item.customerId}}&username={{item.username}}&year={{yearMonth.year}}&month={{yearMonth.month}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active" wx:for="{{rank}}" wx:key="value">
      <view class="weui-cell__bd">{{index + 1}}. {{item.msg}}</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>

  </view>
  <view class="weui-cells__tips">{{summary}}</view>

  <view class="weui-btn-area">
    <picker name="history" range="{{historyRange}}" range-key='display' value='{{selectedIndex}}' bindchange="changeMonth">
      <button class="weui-btn">历史记录</button>
    </picker>
  </view>

</view>